<head>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet">
</head>

<body>
  <h1>My tasks</h1>
  <ul>
  <% @tasks.each do |task| %>
      <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
     <%= link_to task.title, task_path(task.id) %>
     <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task.id), method: :delete, data: {confirm: 'Are you sure?'} %>
   </li>
  <% end %>
  <ul>

  <br><br>
  <%= link_to 'Add a new task', new_path %>

</body>
